<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/ll_popuwin_configuration_scheme_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:text="待配置:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:id="@+id/tv_popup_configuration_scheme_stQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                style="@style/CommonTextStyle"
                android:text="吨" />


            <TextView
                android:id="@+id/tv_popup_configuration_scheme_stPie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                style="@style/CommonTextStyle"
                android:text="件" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:text="重量:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

            <EditText
                android:id="@+id/et_popup_configuration_scheme_Qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:text="件数:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

            <EditText
                android:id="@+id/et_popup_configuration_scheme_pie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="预计提货日期:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:id="@+id/et_popup_configuration_scheme_pickDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/gray" />


        <LinearLayout
            android:id="@+id/ll_configurataion_scheme_flage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:text="车牌:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

            <EditText
                android:id="@+id/et_popup_configuration_scheme_carShipNo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

            <ImageView
                android:id="@+id/iv_popup_configuration_scheme_carShipNo"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_down"/>


        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:text="司机:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

            <EditText
                android:id="@+id/et_popup_configuration_scheme_driverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:inputType="phone"
                android:text="司机电话:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

            <EditText
                android:id="@+id/et_popup_configuration_scheme_driverPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:inputType="phone"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:text="身份证:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

            <EditText
                android:id="@+id/et_popup_configuration_scheme_driverId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_popup_configuration_scheme_negativeButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/rectangular_fillet_rightbottom_button_blue"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/bt_popup_configuration_scheme_positiveButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/rectangular_fillet_leftbottom_button_blue"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>